<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
            android:id="@+id/login_input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:hint="@string/login_email_input_placeholder"
            android:inputType="textMultiLine|textVisiblePassword"
            android:textColor="@color/text_edit_color"
            android:textColorHint="@color/text_edit_placeholder_color"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="266dp" />

    <EditText
            android:id="@+id/login_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="12dp"
            android:hint="@string/login_password_input_placeholder"
            android:inputType="textMultiLine|textPassword"
            android:textColor="@color/text_edit_color"
            android:textColorHint="@color/text_edit_placeholder_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_input_email" />

    <Button
            android:id="@+id/login_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/color_white"
            android:textAllCaps="false"
            android:background="@drawable/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/login_submit_btn"
            app:layout_constraintTop_toBottomOf="@id/login_input_password" />

    <TextView
            android:id="@+id/login_error_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/validatable_edit_text_border_false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_submit" />

</androidx.constraintlayout.widget.ConstraintLayout>