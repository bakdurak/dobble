<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:id="@+id/messages_user_src_container"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/message_avatar_src"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    tools:src="@drawable/design_placeholder" />
            <TextView
                    android:id="@+id/message_name_src"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Random Name" />
        </LinearLayout>
        <TextView
                android:id="@+id/message_content"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:padding="6dp"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/messages_user_dst_container"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/message_avatar_dst"
                    android:layout_width="50dp"
                    android:layout_height="35dp"
                    tools:src="@drawable/design_placeholder" />
            <TextView
                    android:id="@+id/message_name_dst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Random Name" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/message_send_btn"
                android:text="@string/wall_add_sub_comment_btn"
                android:background="@drawable/wall_content_container"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="23dp" />
        <TextView
                android:id="@+id/message_send_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                tools:text="20:56 , August 10th, 2020"/>
    </LinearLayout>

    <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/users_separator"/>
</LinearLayout>