<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/wall_content_container"
        android:padding="4dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
                android:id="@+id/wall_sub_comment_avatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:src="@drawable/design_placeholder"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="25dp"/>

        <TextView
                android:id="@+id/wall_sub_comment_content"
                tools:text="Lorem ipsum"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/wall_sub_comment_avatar"
                android:layout_width="0dp"
                android:layout_weight=".80"
                android:layout_height="wrap_content"/>

</LinearLayout>