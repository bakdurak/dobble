<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <item app:state_valid = "false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white" />

            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

            <corners android:radius="5dp" />

            <stroke
                android:width="1dp"
                android:color="@color/validatable_edit_text_border_false" />
        </shape>
    </item>

    <item app:state_valid = "true">
        <shape>
            <solid android:color="@color/color_white" />

            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />

            <corners android:radius="5dp" />

            <stroke
                android:width="1dp"
                android:color="@color/validatable_edit_text_border_true" />
        </shape>
    </item>
</selector>